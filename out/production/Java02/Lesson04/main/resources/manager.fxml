<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" prefHeight="600" prefWidth="500" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="filemanager.Controller" stylesheets="styles.css">
    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выйти" onAction="#menuItemFileExitAction" />
        </Menu>
    </MenuBar>
    <TextField editable="false" />
    <ListView VBox.vgrow="ALWAYS" fx:id="filesList"/>
    <HBox spacing="5">
        <Button maxWidth="Infinity" text="Просмотр" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Копирование" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Перемещение" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Удаление" HBox.hgrow="ALWAYS" />
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>
</VBox>
